@model NexusCommunicationSystem.Models.Account

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Retail Store
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RetailStore.Name)
        </dd>

        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            User Role
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserRole)
        </dd>

        <dt>
            Account Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccountId)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", "Accounts",new { id=Model.Id })" class="glyphicon glyphicon-pencil">
    </a>
    <a href="@Url.Action("Index", "Accounts")" class="glyphicon glyphicon-backward">
    </a>
</p>
